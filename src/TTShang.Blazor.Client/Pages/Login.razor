@page "/login"
@layout EmptyLayout
@inject IAuthClientService AuthService
@inject NavigationManager Navigation

<MudContainer MaxWidth="MaxWidth.Small" Class="d-flex align-center" Style="height: 100vh;">
    <MudCard Class="pa-4" Style="width: 100%;">
        <MudCardHeader>
            <CardHeaderContent>
                <MudText Typo="Typo.h4" Align="Align.Center">TTShang 系统登录</MudText>
            </CardHeaderContent>
        </MudCardHeader>
        <MudCardContent>
            <MudForm @ref="_form" @bind-IsValid="@_isValid">
                <MudTextField @bind-Value="_loginInput.UserName"
                              Label="用户名"
                              Required="true"
                              RequiredError="请输入用户名"
                              Variant="Variant.Outlined"
                              Class="mb-4"
                              Adornment="Adornment.Start"
                              AdornmentIcon="@Icons.Material.Filled.Person" />

                <MudTextField @bind-Value="_loginInput.Password"
                              Label="密码"
                              Required="true"
                              RequiredError="请输入密码"
                              InputType="@_passwordInput"
                              Variant="Variant.Outlined"
                              Class="mb-4"
                              Adornment="Adornment.End"
                              AdornmentIcon="@_passwordInputIcon"
                              OnAdornmentClick="TogglePasswordVisibility" />
            </MudForm>

            @if (!string.IsNullOrEmpty(_errorMessage))
            {
                <MudAlert Severity="Severity.Error" Class="mb-4">@_errorMessage</MudAlert>
            }
        </MudCardContent>
        <MudCardActions Class="d-flex justify-center">
            <MudButton Variant="Variant.Filled"
                       Color="Color.Primary"
                       Size="Size.Large"
                       FullWidth="true"
                       Disabled="@(!_isValid || _isLoading)"
                       OnClick="HandleLogin">
                @if (_isLoading)
                {
                    <MudProgressCircular Size="Size.Small" Indeterminate="true" Class="mr-2" />
                }
                登 录
            </MudButton>
        </MudCardActions>
    </MudCard>
</MudContainer>

@code {
    private MudForm? _form;
    private bool _isValid;
    private bool _isLoading;
    private string _errorMessage = string.Empty;
    private LoginInput _loginInput = new();
    private InputType _passwordInput = InputType.Password;
    private string _passwordInputIcon = Icons.Material.Filled.VisibilityOff;
    private bool _isPasswordVisible;

    private void TogglePasswordVisibility()
    {
        _isPasswordVisible = !_isPasswordVisible;
        _passwordInput = _isPasswordVisible ? InputType.Text : InputType.Password;
        _passwordInputIcon = _isPasswordVisible ? Icons.Material.Filled.Visibility : Icons.Material.Filled.VisibilityOff;
    }

    private async Task HandleLogin()
    {
        if (_form != null)
        {
            await _form.Validate();
            if (!_isValid) return;
        }

        _isLoading = true;
        _errorMessage = string.Empty;

        try
        {
            var result = await AuthService.LoginAsync(_loginInput);
            if (result != null)
            {
                Navigation.NavigateTo("/", forceLoad: true);
            }
        }
        catch (Exception ex)
        {
            _errorMessage = ex.Message;
        }
        finally
        {
            _isLoading = false;
        }
    }
}
